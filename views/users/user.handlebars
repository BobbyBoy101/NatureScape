<div class="user-form-container">
    <h1>{{title}}</h1>

    <form action="/users/newUser" method="POST">
        <!-- First Name -->
        <label for="firstname"><b>First Name</b></label>
        <input type="text" id="firstname" name="tfirstname" placeholder="Enter your first name" required>
        <br>

        <!-- Last Name -->
        <label for="lastname"><b>Last Name</b></label>
        <input type="text" id="lastname" name="tlastname" placeholder="Enter your last name" required>
        <br>

        <!-- Email -->
        <label for="email"><b>Email</b></label>
        <input type="email" id="email" name="temail" placeholder="Enter your email" required>
        <br>

        <!-- Username -->
        <label for="username"><b>Username</b></label>
        <input type="text" id="username" name="tusername" placeholder="Enter a username" required>
        <br>

        <!-- Password -->
        <label for="password"><b>Password</b></label>
        <input type="password" id="password" name="tpassword" placeholder="Enter your password" required>
        <br>

        <!-- Terms and Conditions Checkbox -->
        <div class="terms-container">
            <label for="terms">
                <input type="checkbox" id="terms" name="tterms" required>
                I agree to the <a href="/users/terms" target="_blank">Terms And Conditions</a>
            </label>
        </div>
        <br>

        <!-- Password -->
        <label for="bio"><b>Biography</b></label>
        <input type="text" id="bio" name="tbio" placeholder="Enter a biography" required>

        <!-- Submit Button -->
        <button type="submit">Create Account</button>
    </form>

        <div class="login-link">
            <p>Already have an account? <a href="../home/home">Log in here</a></p>
            <p>Visit your <a href="/profilePage/userProfile">profile page</a> (coming soon!)</p>
        </div>

    </div>
</div>
