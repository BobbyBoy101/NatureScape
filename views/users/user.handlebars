<div class="user-form-container">
    <h1>{{title}}</h1>

    <!-- Display error message if there's any -->
    {{#if error}}
        <div class="alert">
            <strong>Error:</strong> {{error}}
        </div>
    {{/if}}

    <form action="/users/newUser" method="POST">
        <!-- Role Selection -->
        <div id="newUser-role">
            <label for="role"><b>Role: </b></label>
            <select id="role" name="trole" required size="2">
                <option value="user" {{#if (eq userInput.trole 'user')}}selected{{/if}}>User</option>
                <option value="admin" {{#if (eq userInput.trole 'admin')}}selected{{/if}}>Admin</option>
            </select>
        </div>

        <!-- First Name -->
        <div id="newUser-firstName">
            <label for="firstname"><b>First Name: </b></label>
            <input type="text" id="firstname" name="tfirstname" placeholder="Enter your first name" 
                value="{{userInput.tfirstname}}" maxlength="50" required>
            <br>
        </div>

        <!-- Last Name -->
        <div id="newUser-lastName">
            <label for="lastname"><b>Last Name: </b></label>
            <input type="text" id="lastname" name="tlastname" placeholder="Enter your last name"
                value="{{userInput.tlastname}}" maxlength="50" required>
            <br>
        </div>

        <!-- Email -->
        <div id="newUser-email">
            <label for="email"><b>Email: </b></label>
            <input type="email" id="email" name="temail" placeholder="Enter your email"
                value="{{userInput.temail}}" required>
            <br>
        </div>

        <!-- Username -->
        <div id="newUser-userName">
            <label for="username"><b>Username: </b></label>
            <input type="text" id="username" name="tusername" placeholder="Enter a username"
                value="{{userInput.tusername}}" maxlength="50" required>
            <br>
        </div>

        <!-- Password -->
        <div id="newUser-passWord">
            <label for="password"><b>Password: </b></label>
            <input type="password" id="password" name="tpassword" placeholder="Enter your password" 
            maxlength="30" required>
            <br>
        </div>

        <!-- Terms and Conditions Checkbox -->
        <div class="terms-container">
            <label for="terms">
                <input type="checkbox" id="terms" name="tterms" {{#if userInput.tterms}}checked{{/if}} required>
                I agree to the <a href="/terms" target="_blank">Terms And Conditions</a>
            </label>
            <br>
        </div>
        


        <!-- Biography -->
        <div id="newUser-biography">
            <label for="bio"><b>Biography: </b></label>
            <input type="text" id="bio" name="tbio" placeholder="Enter a biography" 
                value="{{userInput.tbio}}" maxlength="500" required>
            <br>
        </div>

        <div id="newUser-submitButton">
            <!-- Submit Button -->
            <button type="submit">Create Account</button>
        </div>
    </form>

    <div class="login-link">
        <p>Already have an account? <a href="/login">Log in here</a></p>
    </div>
</div>
