        <!-- Biography -->
        <div id="newUser-biography">
            <label for="bio"><b>Biography: </b></label>
            <input type="text" id="bio" name="tbio" placeholder="Enter a biography" 
                value="{{userInput.tbio}}" maxlength="500" required>
            <br>
        </div>

        <div id="newUser-submitButton">
            <!-- Submit Button -->
            <button type="submit">Create Account</button>
        </div>
    </form>

