<div class = "user-dashboard-container">
  <Form action="/profilePage" method="POST">
      <label>
        User Profile Page 
        <input type="text" name="title" placeholder="User Profile Page" value="{{post.title}}" class="full-width-input">
      </label>
      <header>
        <h1>Welcome to Your Dashboard, {{newUser.firstname}}!</h1>
      </header>

      <main>
        <!-- User Details Part -->
        <section id="user-details">
          <h2>Profile Information</h2>
          <ul>
            <li><strong>First Name:</li></strong>{{newUser.firstname}}</li>
            <li><strong>Last Name:</li></strong>{{newUser.lastname}}</li>
            <li><strong>Username:</li></strong>{{newUser.username}}</li>
            <li><strong>Email:</li></strong>{{newUser.email}}</li>
            <!--<li><strong>Bio:</li></strong>{{newUser.profile.bio}}</li>   -->
          </ul>
        </section>

        <!-- Photos Part -->
        <section id="user-photos">
          <h2>Your Photos</h2>

        </section>

        <!-- Add Photos & Location Link -->
        <section id="add-photos">
          <!--<a href=""></
          a>-->

        </section>
      </main>
    </Form>
</div>
  